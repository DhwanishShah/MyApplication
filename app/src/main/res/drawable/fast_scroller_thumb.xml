<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the scroller is being pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#303F9F"/> <!-- A hard-coded, slightly darker indigo -->
            <corners android:radius="12dp"/>
            <size android:width="8dp"/>
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3F51B5"/> <!-- The hard-coded base indigo color -->
            <corners android:radius="12dp"/>
            <size android:width="8dp"/>
        </shape>
    </item>
</selector>
